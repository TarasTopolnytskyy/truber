@model List<Truber>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark"\>
            <h1 class="wht"><img src="/../img/logo.jpg" width="80" height="80" class="d-inline-block align-top" alt=""> Truber</h1>
        
            <p class="wht">
            <a asp-action="Index" asp-controller="TruberDriver" class="btn btn-success">Home</a>
            <a asp-action="LogOut" asp-controller="Home" class="btn btn-outline-danger">LogOut</a>
        </p>
    </nav>
    @if(ViewBag.DriverId == 1)
    {
        <p>H1</p>
    }
    <table  class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Activity</th>
            <th scope="col">Status</th>
            <th scope="col">PickUp Location</th>
            <th scope="col">DropOff Location</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td><a asp-action="ShowJob" asp-controller="TruberDriver" asp-route-truberId="@ev.TruberId">View</a></td>
                <td >@if(ev.DriverId == ViewBag.DriverId && ev.Completed == null)
                    {
                        <a asp-action="Completed" asp-controller="TruberDriver" asp-route-truberId="@ev.TruberId" class="btn btn-success">Complete</a>
                        <a asp-action="DropJob" asp-controller="TruberDriver" asp-route-truberId="@ev.TruberId" class="btn btn-danger">Cancel Job</a>
                    }
                    else if(ev.Completed == ViewBag.DriverId)
                    {
                        <a class="btn btn-danger">Completed</a>
                    }
                </td>
                <td>@ev.AddressPickUp</td>
                <td>@ev.AddressDropOff</td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>
