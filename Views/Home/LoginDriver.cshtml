@model LoginDriver

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <div class="accesBoxes">
        <a class="login_account_links_login" asp-action="Index" asp-controller="Home">Don't have an account</a>
        <h1>Login As A Driver: </h1>

        <form class="col-11" asp-action="SignInDriver" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="LoginDriverEmail"></span>
                <label asp-for="LoginDriverEmail"></label>
                <input asp-for="LoginDriverEmail" class="form-control">
            </div>

            <div class="form-group">
                <span asp-validation-for="LoginDriverPassword"></span>
                <label asp-for="LoginDriverPassword"></label>
                <input asp-for="LoginDriverPassword" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="SignIn" class="btn btn-outline-success">
            </div>
        </form>
    </div>
</body>
</html>
