@model List<Truber>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
            <h1 class="wht"><img src="/../img/logo.jpg" width="80" height="80" class="d-inline-block align-top" alt=""> Truber</h1>
        
            <p class="wht">Welcome, @ViewBag.UserFirstName
            <a asp-action="TruberNew" asp-controller="Truber" class="btn btn-primary">Add New Activity</a>
            <a asp-action="DriverRegister" asp-controller="Home" class="btn btn-warning">Become A Driver</a>
            <a asp-action="LogOut" asp-controller="Home" class="btn btn-outline-danger">LogOut</a>
        </p>
    </nav>
    <div class="dashboardUser">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Activity</th>
                    <th scope="col">Status</th>
                    <th scope="col">PickUp Location</th>
                    <th scope="col">DropOff Location</th>
                    <th scope="col">Total Amout Of Miles</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td scope="row"><a asp-action="Show" asp-controller="Truber" asp-route-truberId="@ev.TruberId">View</a></td>
                        <td>@if(ev.DriverId == null)
                            {
                                <a class="btn btn-warning">Not Taken</a>
                            }
                            else if(ev.Completed !=null)
                            {
                                <a class="btn btn-success">Completed</a>
                            }
                            else
                            {
                                <a class="btn btn-danger">Taken</a>
                            }
                        </td>
                        <td>@ev.AddressPickUp</td>
                        <td>@ev.AddressDropOff</td>
                        <td>@ev.TotalAmoutOfMiles mi</td>
                        <td>$@ev.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>